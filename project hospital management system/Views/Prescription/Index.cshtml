﻿@model IEnumerable<project_hospital_management_system.Models.Prescription>

@{
    ViewBag.Title = "Prescriptions";
}

<h2>Prescription Management</h2>

<div class="row">
    <div class="col-md-12">
        <p>
            @Html.ActionLink("Create New Prescription", "Create", null, new { @class = "btn btn-primary" })
        </p>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Success!</strong> @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Error!</strong> @TempData["ErrorMessage"]
    </div>
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Prescriptions</h3>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PrescriptionId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Patient.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Doctor.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Medication.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateIssued)
                    </th>
                    <th>Actions</th>
                </tr>

                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PrescriptionId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Patient.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Doctor.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Medication.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateIssued)
                            </td>
                            <td>
                                <div class="btn-group">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.PrescriptionId }, new { @class = "btn btn-sm btn-default" })
                                    @Html.ActionLink("Details", "Details", new { id = item.PrescriptionId }, new { @class = "btn btn-sm btn-info" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.PrescriptionId }, new { @class = "btn btn-sm btn-danger" })
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No prescriptions found.</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Auto-hide alerts after 5 seconds
            window.setTimeout(function () {
                $(".alert").fadeTo(500, 0).slideUp(500, function () {
                    $(this).remove();
                });
            }, 5000);
        });
    </script>
}

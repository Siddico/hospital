﻿@{
    ViewBag.Title = "Page Not Found";
}

<div class="error-page">
    <div class="alert alert-warning">
        <h2><i class="glyphicon glyphicon-exclamation-sign"></i> 404 - Page Not Found</h2>
    </div>

    <div class="well">
        <div class="row">
            <div class="col-md-6">
                <h3>The page you requested could not be found.</h3>
                <p>The page might have been removed, had its name changed, or is temporarily unavailable.</p>
                <p>Please check that the URL is correct or return to the home page.</p>
                
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="alert alert-info">
                        <p><strong>Additional Information:</strong> @ViewBag.Message</p>
                    </div>
                }
            </div>
            <div class="col-md-6 text-center">
                <i class="glyphicon glyphicon-search" style="font-size: 100px; color: #f0ad4e; margin: 20px;"></i>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                    <i class="glyphicon glyphicon-home"></i> Return to Home Page
                </a>
            </div>
            <div class="col-md-6 text-right">
                <button class="btn btn-default" onclick="window.history.back();">
                    <i class="glyphicon glyphicon-arrow-left"></i> Go Back
                </button>
            </div>
        </div>
    </div>
</div>
